# LevelUp Environment Configuration Template
#
# Copy this file to .env and fill in actual values
# NEVER commit the real .env file - it contains sensitive data
#

# Timezone
TZ=Europe/Amsterdam

# Domain Configuration
DOMAIN=example.com
SUBDOMAIN_PREFIX=service

# Network Configuration
DOCKER_NETWORK=levelup-net
SUBNET=172.20.0.0/16

# Storage Paths
DATA_ROOT=/mnt/data
MEDIA_ROOT=/mnt/media
BACKUP_ROOT=/mnt/backups

# Service Ports (Internal)
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080

# Database Credentials (change these!)
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme
POSTGRES_DB=levelup

MYSQL_ROOT_PASSWORD=changeme
MYSQL_USER=admin
MYSQL_PASSWORD=changeme
MYSQL_DATABASE=levelup

# API Keys and Tokens
# Generate secure random strings for these values
SECRET_KEY=generate-random-string-here
API_TOKEN=generate-random-string-here

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=changeme
SMTP_FROM=noreply@example.com

# Monitoring (optional)
GRAFANA_ADMIN_PASSWORD=changeme
PROMETHEUS_RETENTION_TIME=15d

# Media Services (optional)
PLEX_CLAIM=claim-xxxxxxxxxx
SONARR_API_KEY=generate-api-key
RADARR_API_KEY=generate-api-key

# AI Services (optional)
OLLAMA_MODELS_PATH=/mnt/data/ollama/models
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx

# Backup Configuration
BACKUP_ENCRYPTION_PASSWORD=changeme
BACKUP_RETENTION_DAYS=30
